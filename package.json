{
  "name": "@threefold/extension",
  "version": "0.0.1-rc9",
  "private": false,
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "run-p build:extension build:api",
    "compress:extension": "VERSION=`node -p \"require('./package.json').version\"` sh ./scripts/compress.sh",
    "build:extension": "run-p build:app && run-p build:background build:content build:inject && run-p compress:extension",
    "build:app": "run-p type-check build-only",
    "build:api": "TARGET=API run-p build-only",
    "build:background": "TARGET=BACKGROUND run-p build-only",
    "build:content": "TARGET=CONTENT run-p build-only",
    "build:inject": "TARGET=INJECT run-p build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@mdi/font": "^7.2.96",
    "@polkadot/keyring": "^12.4.2",
    "@polkadot/wasm-crypto": "^7.2.2",
    "@threefold/grid_client": "^2.1.1",
    "bip39": "^3.1.0",
    "cryptr": "^6.2.0",
    "md5": "^2.3.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vuetify": "^3.3.14",
    "web-ssh-keygen": "^0.1.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/chrome": "^0.0.244",
    "@types/jsdom": "^21.1.1",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.17.5",
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "sass": "^1.66.1",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.3",
    "vite-plugin-generate-file": "^0.0.4",
    "vite-plugin-node-polyfills": "^0.11.3",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8"
  }
}
